            <form class="form-inline text-center" action="/answer">
              <input type="text" id="ville" class="form-control" name="city" placeholder="Paris">
              <input type="text" id="datepicker" class="form-control" name="date" placeholder="07/04/2011">
              <button type="submit" class="btn btn-primary">rechercher</button>
            </form>
          </div>
          <!-- <get-weather></get-weather> -->
        </div>
      </div>

      <div class="container">
<!--         <div ng-repeat="meteo in meteos">
          <get-weather weather="meteo"> </get-weather>
        </div> -->
        <div class="forecast">
          <p>{{ results["date"]["hour"] }}: {{ results["date"]["min"] }}</p>
          <p>{{ results["tempm"] }} Â°C</p>

          <div ng-repeat="meteo in meteos">
            <get-weather weather="meteo"> </get-weather>
          </div>
        </div>
      </div>

    </div>
  </body>
</html>
